<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="32dp"
    tools:context=".FinalStepsSignUpActivity">

    <TextView
        android:id="@+id/text_hiThere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Hi there!"
        android:textColor="#FFFFFF"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/text_letsFinishYourSetup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_hiThere"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="Let's finish setting up your account!"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <LinearLayout

        android:id="@+id/signup_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_letsFinishYourSetup"
        android:layout_marginTop="16dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/user_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawablePadding="12dp"
            android:hint="Age"
            android:imeOptions="actionNext"
            android:inputType="text" />


        <EditText
            android:id="@+id/user_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawablePadding="12dp"
            android:hint="Height"
            android:imeOptions="actionNext"
            android:inputType="text" />


        <EditText
            android:id="@+id/user_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawablePadding="12dp"
            android:hint="Weight"
            android:imeOptions="actionNext"
            android:inputType="text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawablePadding="12dp"
            android:text="Gender"
            android:textSize="18sp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textColor="#FFFFFF" />

            <RadioButton
                android:id="@+id/radio_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Female"
                android:textColor="#FFFFFF" />

        </RadioGroup>


    </LinearLayout>

    <Button
        android:id="@+id/button_signup"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/cardview_light_background"
        android:padding="8dp"
        android:text="Let's get started!"
        android:textAllCaps="false"
        android:textColor="#3B7BFC"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>